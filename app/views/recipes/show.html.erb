<% if user_signed_in? %>
  <% if !current_user.favorites.exists? @recipe.id %>
    <%= link_to favorite_recipe_path, method: :post, id: 'favorite' do %>
      <%= fa_icon 'star-o 3x' %>
    <% end %>
  <% else %>
    <%= link_to unfavorite_recipe_path, method: :post, id: 'unfavorite' do %>
      <%= fa_icon 'star 3x' %>
    <% end %>
  <% end %>
<% end %>

<%= render @recipe %>

<% if @recipe.user == current_user %>
  <%= link_to t('simple_form.buttons.edit_recipe'), edit_recipe_path %>
  <%= link_to t('simple_form.buttons.remove_recipe'), @recipe, method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<%= link_to t('simple_form.back'), root_path %>