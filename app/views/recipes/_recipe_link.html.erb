<div class="col-md-3 col-sm-6">
  <div class="recipe-container">
    <%= image_tag recipe.photo.url(:thumb), class: 'img-frame' %>
    <div class="recipe-detail">
      <h3><%= link_to recipe.title, recipe %></h3>
      <div>
        <p class="btn btn-primary"><%= link_to recipe.recipe_type.name, recipe.recipe_type %></p>
      </div>
      <div>
        <p class="btn btn-success"><%= link_to recipe.cuisine.name, recipe.cuisine %></p>
      </div>
      <div>
        <p class="btn btn-danger"><%= recipe.difficulty %></p>
      </div>
      <div>
        <p><%= recipe.cook_time_min %></p>
      </div>
    </div>
  </div>
</div>
